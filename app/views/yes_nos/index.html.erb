<main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
  <p id="notice"><%= notice %></p>

  <h1>Yes Nos</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @yes_nos.each do |yes_no| %>
        <tr>
          <td><%= yes_no.name %></td>
          <td><%= link_to 'Show', yes_no %></td>
          <td><%= link_to 'Edit', edit_yes_no_path(yes_no) %></td>
          <td><%= link_to 'Destroy', yes_no, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Yes No', new_yes_no_path %>
</main>